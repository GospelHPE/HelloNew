package com.huawei.xdevice.floatrobot.service;

import android.app.Service;
import android.content.Intent;
import android.os.IBinder;

import com.android.uiautomator.core.UiDevice;
import com.huawei.xdevice.floatrobot.listener.ExceCallBack;
import com.huawei.xdevice.floatrobot.runner.UiAutomatorRunner;

/**
 * 悬浮窗Service 该服务会在后台一直运行一个悬浮的透明的窗体
 * 
 * @author sunyl 2017/02/25
 * 
 */
public class ExceEventService extends Service implements ExceCallBack {

	String TAG = "ExceEventService";

	private UiDevice uidevice;

	boolean isuccess = false;

	@Override
	public IBinder onBind(Intent arg0) {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public void onCreate() {

		super.onCreate();
	}

	@Override
	public int onStartCommand(Intent intent, int flags, int startId) {
		// UiAutomatorRunner.getInstance().initialize();
		uidevice = UiAutomatorRunner.getInstance().getUiDevice();

		for (int i = 0; i < 10; i++) {
			System.out.println(i + "-****设备名称" + uidevice.getProductName()
					+ "****gospeltest****excuEvent");
		}
		try {
			Thread.sleep(1000);
		} catch (InterruptedException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		UiAutomatorRunner.getInstance().getUiDevice().click(108, 1699);
		try {
			Thread.sleep(2000);
		} catch (InterruptedException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		System.out.println("驱动执行成功...");
		isuccess = true;
		return super.onStartCommand(intent, flags, startId);
	}

	@Override
	public void onDestroy() {
		// TODO Auto-generated method stub
		super.onDestroy();
	}

	@Override
	public boolean exceSuccess() {
		return isuccess;
	}
}
